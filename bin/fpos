import os
import sys
realdir = os.path.dirname(os.path.realpath(__file__))
if os.path.exists(os.path.join(realdir, '..', '.git')):
    sys.path.insert(0, os.path.join(realdir, '..', 'lib'))

import argparse
from fpos import annotate, combine, generate, transform, visualise, window, predict, cdesc

_commands = (annotate, combine, generate, transform, visualise, window, predict, cdesc)

def parse_args():
    p = argparse.ArgumentParser()
    subcmd = p.add_subparsers(dest="command")
    for cmd in _commands:
        for subcmdp in cmd.parse_args(subcmd):
            subcmdp.set_defaults(subcmd=cmd.main)
    return p.parse_args(), p

def main():
    args, parser = parse_args()
    if None is args.command:
        parser.print_help()
    else:
        args.subcmd(args)

if __name__ == "__main__":
    main()
